# ============================================================================
# Legal Assistant Multi-Session Continuity - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
DEBUG=True
ENVIRONMENT=development

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================
DATABASE_URL=postgresql+asyncpg://legal_user:your_password_here@localhost:5432/legal_assistant
DATABASE_POOL_SIZE=20

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# API KEYS - MIGRATING TO CLAUDE
# ============================================================================
# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Tavily AI for legal research (existing feature)
TAVILY_API_KEY=your-tavily-api-key-here

# Legacy OpenAI (keep for gradual migration)
# OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# CLAUDE CONFIGURATION
# ============================================================================
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here

# ============================================================================
# FILE STORAGE
# ============================================================================
FILE_STORAGE_PATH=./storage
FILE_STORAGE_TYPE=local
MAX_FILE_SIZE_MB=50

# ============================================================================
# VECTOR DATABASE
# ============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================================================
# BACKGROUND TASKS
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# PERSONALITY AGENT DEFAULTS
# ============================================================================
DEFAULT_TONE=concise
DEFAULT_FORMALITY=legal
DEFAULT_AGGRESSIVENESS=balanced
DEFAULT_AUDIENCE=internal
